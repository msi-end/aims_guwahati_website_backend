<div class="max-w-3xl mx-auto py-8 px-4">
    <div class="mb-8 flex items-center justify-between">
        <div>
            <a href="/admin/notifications" class="text-sm text-blue-600 font-bold hover:underline">
                <i class="fas fa-arrow-left mr-1"></i> Back to Notifications
            </a>
            <h1 class="text-2xl font-bold text-gray-900 mt-2">Edit Announcement</h1>
        </div>
        <div class="text-right">
            <span class="text-xs font-bold text-gray-400 uppercase block">Created On</span>
            <span class="text-sm text-gray-600"><%= item.createdAt.toLocaleDateString() %></span>
        </div>
    </div>

    <form action="/admin/notifications/update/<%= item.id %>" method="POST" class="bg-white rounded-2xl shadow-sm border p-8 space-y-6">
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-1">
                <label class="text-xs font-bold text-gray-400 uppercase">Category</label>
                <select name="category"  class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none bg-gray-50">
                    <% const cats = ["EXAM RESULT", "ADMISSION", "GENERAL NOTICE", "HOLIDAY", "EVENT", "STAFF NOTICE"]; %>
                    <% cats.forEach(c => { %>
                        <option value="<%= c %>" <%= item.category === c ? 'selected' : '' %>><%= c %></option>
                    <% }) %>
                </select>
            </div>

            <div class="space-y-1">
                <label class="text-xs font-bold text-gray-400 uppercase">Announcement Title</label>
                <input type="text" name="title" value="<%= item.title %>" 
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" placeholder="e.g. End Semester Results Declared">
            </div>
        </div>

        <div class="space-y-1">
            <label class="text-xs font-bold text-gray-400 uppercase">Detailed Description</label>
            <textarea name="description" rows="4" 
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"><%= item.description %></textarea>
        </div>

        <div class="space-y-1">
            <label class="text-xs font-bold text-gray-400 uppercase">Redirect URL / Link (Optional)</label>
            <div class="relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                    <i class="fas fa-link text-xs"></i>
                </span>
                <input type="text" name="redirectUrl" value="<%= item.redirectUrl || '' %>"
                    class="w-full pl-8 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" placeholder="https://aims.com/portal/results">
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-4">
            <div class="space-y-1">
                <label class="text-xs font-bold text-gray-400 uppercase">Publish Date (Visible From)</label>
                <input type="date" name="publishDate" 
                    value="<%= item.publishDate.toISOString().split('T')[0] %>"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
            </div>

            <div class="space-y-1">
                <label class="text-xs font-bold text-gray-400 uppercase">End Date (Auto-Archive)</label>
                <input type="date" name="endDate" 
                    value="<%= item.endDate ? item.endDate.toISOString().split('T')[0] : '' %>"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
                <p class="text-[10px] text-gray-400 mt-1 italic">Leave blank for no expiry</p>
            </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-xl border border-dashed border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <h4 class="text-sm font-bold text-gray-700">Visibility Status</h4>
                    <p class="text-xs text-gray-500">Uncheck this to hide the notice immediately without deleting it.</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" name="is_active" class="sr-only peer" <%= item.isActive ? 'checked' : '' %>>
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                </label>
            </div>
        </div>

        <div class="flex gap-4 pt-4">
            <button type="submit" class="flex-1 bg-blue-600 text-white py-3 rounded-xl font-bold hover:bg-blue-700 transition shadow-lg shadow-blue-100">
                Update Announcement
            </button>
            <a href="/admin/notifications" class="px-6 py-3 border border-gray-300 text-gray-600 rounded-xl font-bold hover:bg-gray-50 transition">
                Cancel
            </a>
        </div>
    </form>
</div>
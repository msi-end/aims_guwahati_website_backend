<div class="max-w-6xl mx-auto py-8 px-4">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Notifications & Announcements</h1>
            <p class="text-sm text-gray-500">Manage alerts appearing on the student portal</p>
        </div>
        <a href="/admin/notifications/create" class="bg-blue-600 text-white px-4 py-2 rounded-lg font-bold hover:bg-blue-700 transition">
            <i class="fas fa-plus mr-2"></i> Create New
        </a>
    </div>

    <div class="flex flex-wrap gap-2 mb-6">
        <a href="/admin/notifications" class="px-4 py-2 rounded-full text-sm font-medium <%= currentCategory === 'all' ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200' %>">
            All (<%= categories.reduce((acc, curr) => acc + curr.count, 0) %>)
        </a>
        <% categories.forEach(cat => { %>
            <a href="/admin/notifications?category=<%= cat.name %>" class="px-4 py-2 rounded-full text-sm font-medium <%= currentCategory === cat.name ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200' %>">
                <%= cat.name %> (<%= cat.count %>)
            </a>
        <% }) %>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50 border-b">
                <tr>
                    <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase">Announcement</th>
                    <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase">Timeline</th>
                    <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                <% notifications.forEach(item => { %>
                    <tr class="hover:bg-gray-50 transition">
                        <td class="px-6 py-4">
                            <span class="inline-block px-2 py-0.5 bg-blue-100 text-blue-700 text-[10px] font-black rounded mb-1">
                                <%= item.category %>
                            </span>
                            <h4 class="font-bold text-gray-900"><%= item.title %></h4>
                            <p class="text-xs text-gray-500 truncate max-w-xs"><%= item.description %></p>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-xs text-gray-600">
                                <div><i class="far fa-calendar-check mr-1 text-green-500"></i> Publish: <%= item.publishDate.toLocaleDateString() %></div>
                                <% if(item.endDate) { %>
                                    <div><i class="far fa-calendar-times mr-1 text-red-400"></i> Ends: <%= item.endDate.toLocaleDateString() %></div>
                                <% } else { %>
                                    <div class="text-gray-400 italic">No Expiry</div>
                                <% } %>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <% if(item.isActive) { %>
                                <span class="px-2 py-1 bg-green-100 text-green-700 text-[10px] font-bold rounded-full">ACTIVE</span>
                            <% } else { %>
                                <span class="px-2 py-1 bg-gray-100 text-gray-400 text-[10px] font-bold rounded-full">INACTIVE</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 text-right space-x-2">
                            <a href="/admin/notifications/edit/<%= item.id %>" class="text-blue-600 hover:text-blue-800 p-2"><i class="fas fa-edit"></i></a>
                            <form action="/admin/notifications/delete/<%= item.id %>" method="POST" class="inline" onsubmit="return confirm('Delete this notification?')">
                                <button type="submit" class="text-red-500 hover:text-red-700 p-2"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
                <% if(notifications.length === 0) { %>
                    <tr><td colspan="4" class="px-6 py-10 text-center text-gray-400">No notifications found in this category.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<% 
  const title = 'Admissions List';
  const pageTitle = 'Admissions Management';
  const pageDescription = 'Manage and review student admission applications';
%>

<div class="bg-white rounded-xl shadow-lg p-6 mb-6">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
    
    <div class="flex flex-wrap items-center gap-4">
      <div class="flex items-center space-x-2">
        <label class="text-sm font-medium text-gray-700">Course:</label>
        <div class="inline-flex rounded-md shadow-sm">
          <a href="?courseType=BBA" class="px-4 py-2 text-sm font-medium rounded-l-lg border <%= filters.courseType === 'BBA' ? 'bg-blue-600 text-white border-blue-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50' %>">
            BBA
          </a>
          <a href="?courseType=MBA" class="px-4 py-2 text-sm font-medium rounded-r-lg border-t border-b border-r <%= filters.courseType === 'MBA' ? 'bg-blue-600 text-white border-blue-600' : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50' %>">
            MBA
          </a>
        </div>
      </div>

      <div class="flex items-center space-x-2">
        <label class="text-sm font-medium text-gray-700">Status:</label>
        <select id="statusFilter" onchange="filterByStatus()" class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 text-sm">
          <option value="">All Status</option>
          <option value="pending" <%= filters.status === 'pending' ? 'selected' : '' %>>Pending</option>
          <option value="approved" <%= filters.status === 'approved' ? 'selected' : '' %>>Approved</option>
          <option value="rejected" <%= filters.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
        </select>
      </div>
    </div>
    
    <div class="flex items-center space-x-2">
      <button onclick="exportToCSV()" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition flex items-center text-sm">
        <i class="fas fa-file-csv mr-2"></i>Export CSV
      </button>
    </div>
  </div>
</div>

<div class="bg-white rounded-xl shadow-lg overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
    <h3 class="text-lg font-bold text-gray-900 flex items-center">
      <i class="fas fa-graduation-cap text-blue-600 mr-2"></i>
      <%= filters.courseType %> Applications (<%= total %>)
    </h3>
  </div>
  
  <div class="p-6">
    <table id="admissionsTable" class="display w-full">
      <thead>
        <tr class="text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">
          <th>App No</th>
          <th>Student Name</th>
          <th>Contact Info</th>
          <th>Course</th>
          <th>Status</th>
          <th>Applied Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% admissions.forEach(admission => { %>
          <% 
             // Handle name difference between BBA (fullName) and MBA (firstName + lastName)
             const displayName = admission.fullName || (admission.firstName + ' ' + (admission.lastName || ''));
             const displayEmail = admission.email || admission.student?.email || 'N/A';
          %>
        <tr>
          <td class="font-mono text-sm text-blue-600 font-bold">
            <%= admission.student?.applicationNo || 'N/A' %>
          </td>
          <td>
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-bold text-xs mr-3">
                <%= displayName.charAt(0).toUpperCase() %>
              </div>
              <div class="flex flex-col">
                <span class="font-semibold text-gray-900"><%= displayName %></span>
                <span class="text-xs text-gray-500"><%= admission.category? admission.category: 'N/A' %> | <%= admission.gender? admission.gender: 'N/A' %></span>
              </div>
            </div>
          </td>
          <td>
            <div class="text-sm">
              <div class="flex items-center text-gray-700"><i class="far fa-envelope mr-2 w-4"></i><%= displayEmail %></div>
              <div class="flex items-center text-gray-700"><i class="fas fa-mobile-alt mr-2 w-4"></i><%= admission.mobileNumber %></div>
            </div>
          </td>
          <td class="text-sm font-medium text-gray-600">
            <%= filters.courseType %>
          </td>
          <td>
            <% const s = admission.status.toLowerCase(); %>
            <span class="px-3 py-1 text-xs font-bold rounded-full 
              <%= s === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                  s === 'approved' ? 'bg-green-100 text-green-800' : 
                  'bg-red-100 text-red-800' %>">
              <%= s.charAt(0).toUpperCase() + s.slice(1) %>
            </span>
          </td>
          <td class="text-sm text-gray-500">
            <%= new Date(admission.createdAt).toLocaleDateString('en-IN') %>
          </td>
          <td>
            <div class="flex items-center space-x-3">
              <a href="/admin/admissions/<%= filters.courseType.toLowerCase() %>/<%= admission.id %>" class="text-blue-500 hover:text-blue-700">
                <i class="fas fa-eye"></i>
              </a>
              <button onclick="confirmDelete(<%= admission.id %>, '<%= filters.courseType %>')" class="text-red-500 hover:text-red-700">
                <i class="fas fa-trash"></i>
              </button>
              
              <div class="relative group">
                <button class="text-gray-400 w-8 hover:text-gray-600"><i class="fas fa-ellipsis-v"></i></button>
                <div class="hidden group-hover:block absolute right-0 w-32 bg-white border rounded shadow-xl z-50">
                   <button onclick="changeStatus(<%= admission.id %>, 'approved')" class="block w-full text-left px-3 py-2 text-xs hover:bg-green-50 text-green-700">Approve</button>
                   <button onclick="changeStatus(<%= admission.id %>, 'rejected')" class="block w-full text-left px-3 py-2 text-xs hover:bg-red-50 text-red-700">Reject</button>
                </div>
              </div>
            </div>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<script>
  // Filter Logic
  function filterByStatus() {
    const status = document.getElementById('statusFilter').value;
    const url = new URL(window.location.href);
    if (status) url.searchParams.set('status', status);
    else url.searchParams.delete('status');
    window.location.href = url.toString();
  }

  function changeStatus(id, newStatus) {
    const courseType = '<%= filters.courseType %>';
    if(confirm(`Mark application as ${newStatus}?`)) {
      fetch(`/admin/admissions/${courseType.toLowerCase()}/${id}/status`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ status: newStatus })
      }).then(() => window.location.reload());
    }
  }

 function confirmDelete(id, type) {
  const courseType = type.toLowerCase();

  if (confirm(`Permanently delete this ${type} application? This cannot be undone.`)) {
    const form = document.createElement('form');
    form.method = 'POST';
        form.action = `/admin/admissions/${courseType}/${id}/delete`;
    document.body.appendChild(form);
    form.submit();
  }
}
</script>
<% 
  const isMba = !!admission.firstName; 
  // Handle MBA name concatenation safely
  const displayName = isMba 
    ? [admission.firstName, admission.middleName, admission.lastName].filter(Boolean).join(' ') || 'N/A'
    : (admission.fullName || 'N/A');
  const title = 'Admission Details';
%>

<div class="max-w-6xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-8 border-b pb-6">
        <div>
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <a href="/admin/admissions?courseType=<%= isMba ? 'MBA' : 'BBA' %>" class="text-sm text-blue-600 hover:text-blue-800">
                    <i class="fas fa-arrow-left mr-1"></i> Back to Admissions
                </a>
            </nav>
            <h1 class="text-3xl font-extrabold text-gray-900">
                <%= isMba ? 'MBA' : 'BBA' %> Application Details
            </h1>
            <p class="text-gray-500 font-mono mt-1">App No: <%= admission.student?.applicationNo || 'N/A' %></p>
        </div>
        <div class="mt-4 md:mt-0 flex space-x-3">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold border 
                <%= admission.status === 'approved' ? 'bg-green-100 text-green-800 border-green-200' : 
                    admission.status === 'rejected' ? 'bg-red-100 text-red-800 border-red-200' : 
                    'bg-yellow-100 text-yellow-800 border-yellow-200' %>">
                Status: <%= (admission.status || 'pending').toUpperCase() %>
            </span>
            <!-- <button onclick="window.print()" class="bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-gray-700">
                <i class="fas fa-print mr-2"></i> Print
            </button> -->
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <div class="space-y-6">
            <div class="bg-white rounded-2xl shadow-sm border p-6 text-center">
                <% if (admission.photoUrl) { %>
                    <img src="<%= admission.photoUrl.startsWith('/') ? admission.photoUrl : '/' + admission.photoUrl %>" 
                         class="w-40 h-48 mx-auto object-cover rounded-xl shadow-lg border-4 border-white ring-1 ring-gray-100"
                         onerror="this.src='/images/placeholder-user.png'">
                <% } else { %>
                    <div class="w-40 h-48 mx-auto bg-gray-100 rounded-xl flex items-center justify-center border-2 border-dashed border-gray-300">
                        <i class="fas fa-user text-5xl text-gray-300"></i>
                    </div>
                <% } %>
                
                <h2 class="mt-4 text-xl font-bold text-gray-900"><%= displayName %></h2>
                <p class="text-blue-600 font-medium"><%= admission.email || 'N/A' %></p>
                <p class="text-gray-500"><%= admission.mobileNumber || 'N/A' %></p>

                <div class="mt-6 grid grid-cols-2 gap-4 text-left border-t pt-6">
                    <div>
                        <span class="block text-xs font-bold text-gray-400 uppercase">DOB</span>
                        <span class="text-sm font-medium"><%= admission.dateOfBirth || 'N/A' %></span>
                    </div>
                    <div>
                        <span class="block text-xs font-bold text-gray-400 uppercase">Gender</span>
                        <span class="text-sm font-medium"><%= admission.gender || 'N/A' %></span>
                    </div>
                    <div>
                        <span class="block text-xs font-bold text-gray-400 uppercase">Category</span>
                        <span class="text-sm font-medium"><%= admission.category || 'N/A' %></span>
                    </div>
                    <div>
                        <span class="block text-xs font-bold text-gray-400 uppercase">Aadhaar</span>
                        <span class="text-sm font-medium"><%= admission.aadhaarNumber || 'N/A' %></span>
                    </div>
                </div>
                
                <% if (admission.signatureUrl) { %>
                    <div class="mt-6 border-t pt-4">
                        <span class="block text-xs font-bold text-gray-400 uppercase mb-2 text-left">Digital Signature</span>
                        <img src="<%= admission.signatureUrl.startsWith('/') ? admission.signatureUrl : '/' + admission.signatureUrl %>" 
                             class="h-16 w-full object-contain bg-gray-50 rounded border p-1">
                    </div>
                <% } %>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border p-6">
                <h3 class="font-bold text-gray-900 mb-4">Update Status</h3>
                <form action="/admin/admissions/<%= isMba ? 'mba' : 'bba' %>/<%= admission.id %>/status" method="POST" class="space-y-4">
                    <select name="status" class="w-full p-2 border rounded-lg bg-gray-50">
                        <option value="pending" <%= admission.status === 'pending' ? 'selected' : '' %>>Pending</option>
                        <option value="approved" <%= admission.status === 'approved' ? 'selected' : '' %>>Approve</option>
                        <option value="rejected" <%= admission.status === 'rejected' ? 'selected' : '' %>>Reject</option>
                    </select>
                    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg font-bold hover:bg-blue-700">Update Decision</button>
                </form>
            </div>
        </div>

        <div class="lg:col-span-2 space-y-8">
            
            <section class="bg-white rounded-2xl shadow-sm border overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b flex justify-between items-center">
                    <h3 class="font-bold text-gray-800"><i class="fas fa-map-marker-alt mr-2"></i>Address & Accommodation</h3>
                    <span class="text-xs px-2 py-1 bg-blue-100 text-blue-700 rounded">Hostel Required: <%= admission.hostelRequired || 'N/A' %></span>
                </div>
                <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <h4 class="text-xs font-black text-gray-400 uppercase mb-2">Permanent Address</h4>
                        <p class="text-sm text-gray-700 leading-relaxed">
                            <% if (isMba) { %>
                                <%= admission.permAddressLine1 || 'N/A' %>, <%= admission.permCity || 'N/A' %>, <%= admission.permPostOffice || 'N/A' %>, 
                                P.S: <%= admission.permPoliceStation || 'N/A' %>, Dist: <%= admission.permDistrict || 'N/A' %>, 
                                <%= admission.permState || 'N/A' %> - <%= admission.permPinCode || 'N/A' %>
                            <% } else { %>
                                <%= admission.permanentAddress || 'N/A' %>
                            <% } %>
                        </p>
                    </div>
                    <div>
                        <h4 class="text-xs font-black text-gray-400 uppercase mb-2">Correspondence Address</h4>
                        <p class="text-sm text-gray-700 leading-relaxed">
                            <%= admission.corrAddressLine || admission.corrAddressLine1 || 'N/A' %>, <%= admission.corrCity || 'N/A' %>, 
                            <%= admission.corrDistrict || 'N/A' %>, <%= admission.corrState || 'N/A' %> - <%= admission.corrPinCode || 'N/A' %>
                        </p>
                    </div>
                </div>
            </section>

            <section class="bg-white rounded-2xl shadow-sm border overflow-hidden">
                <div class="px-6 py-4 bg-gray-50 border-b"><h3 class="font-bold text-gray-800"><i class="fas fa-users mr-2"></i>Family Details</h3></div>
                <div class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="space-y-1">
                        <label class="text-xs font-bold text-gray-400 uppercase">Father</label>
                        <p class="text-sm font-semibold"><%= admission.fatherName || 'N/A' %></p>
                        <p class="text-xs text-gray-500"><%= admission.fatherOccupation || 'N/A' %> | <%= admission.fatherMobile || 'N/A' %></p>
                    </div>
                    <div class="space-y-1">
                        <label class="text-xs font-bold text-gray-400 uppercase">Mother</label>
                        <p class="text-sm font-semibold"><%= admission.motherName || 'N/A' %></p>
                        <p class="text-xs text-gray-500"><%= admission.motherOccupation || 'N/A' %> | <%= admission.motherMobile || 'N/A' %></p>
                    </div>
                    <div class="space-y-1">
                        <label class="text-xs font-bold text-gray-400 uppercase">Guardian</label>
                        <p class="text-sm font-semibold"><%= admission.guardianName || 'N/A' %></p>
                        <p class="text-xs text-gray-500"><%= (admission.guardianRelation || 'N/A') %> | <%= admission.guardianMobile || 'N/A' %></p>
                    </div>
                </div>
            </section>

            <section class="bg-white rounded-2xl shadow-sm border overflow-hidden">
                <div class="px-6 py-4 bg-gray-800 text-white flex justify-between items-center">
                    <h3 class="font-bold">Uploaded Documents</h3>
                    <span class="text-xs text-gray-300">Click to preview</span>
                </div>
                <div class="p-6 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
                    <% 
                    // Using the new Prisma fields explicitly
                    const docs = [
                        { label: '10th Marksheet', url: admission.marksheet10Url },
                        { label: '12th Marksheet', url: admission.marksheet12Url },
                        { label: 'Graduation', url: admission.marksheetGradUrl },
                        { label: 'Caste Cert.', url: admission.casteCertificateUrl },
                        { label: 'Signature', url: admission.signatureUrl }
                    ]; 
                    %>

                    <% docs.forEach(doc => { %>
                        <div class="flex flex-col items-center p-4 border rounded-xl hover:bg-gray-50 transition-all group">
                            <span class="text-[10px] font-black text-gray-400 uppercase mb-3 text-center h-8 flex items-center">
                                <%= doc.label %>
                            </span>
                            
                            <% if (doc.url) { %>
                                <a href="<%= doc.url.startsWith('/') ? doc.url : '/' + doc.url %>" 
                                   target="_blank" 
                                   class="flex flex-col items-center">
                                    <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-lg flex items-center justify-center group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                        <i class="fas fa-file-pdf text-2xl"></i>
                                    </div>
                                    <span class="block text-[10px] mt-2 text-blue-600 font-bold">VIEW FILE</span>
                                </a>
                            <% } else { %>
                                <div class="w-12 h-12 bg-gray-50 text-gray-200 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-minus text-xl"></i>
                                </div>
                                <span class="text-[10px] text-gray-300 mt-2 uppercase font-bold">NOT UPLOADED</span>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            </section>
        </div>
    </div>
</div>
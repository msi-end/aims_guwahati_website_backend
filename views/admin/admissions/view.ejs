<% 
  const title = 'View Admission';
  const pageTitle = 'Admission Details';
  const pageDescription = `Viewing admission for ${admission.studentName}`;
%>

<div class="max-w-5xl mx-auto">
  
  <!-- Back Button -->
  <a href="/admin/admissions" class="inline-flex items-center text-blue-600 hover:text-blue-700 mb-6">
    <i class="fas fa-arrow-left mr-2"></i>Back to Admissions
  </a>
  
  <!-- Student Info Card -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
      <h3 class="text-xl font-bold text-white">Student Information</h3>
    </div>
    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
      
      <!-- Left Column -->
      <div class="space-y-4">
        <div>
          <label class="text-sm font-medium text-gray-500">Student Name</label>
          <p class="text-lg font-semibold text-gray-900"><%= admission.studentName %></p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-500">Date of Birth</label>
          <p class="text-gray-900"><%= formatDate(admission.dateOfBirth) %></p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-500">Gender</label>
          <p class="text-gray-900"><%= admission.gender %></p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-500">Class Applying</label>
          <p class="text-gray-900 font-medium"><%= admission.classApplying %></p>
        </div>
      </div>
      
      <!-- Right Column with Photo -->
      <div class="space-y-4">
        <% if (admission.passportPhoto) { %>
        <div>
          <label class="text-sm font-medium text-gray-500 block mb-2">Passport Photo</label>
          <img src="<%= admission.passportPhoto %>" alt="Passport Photo" class="w-48 h-48 object-cover rounded-lg border-4 border-gray-200 shadow-md">
        </div>
        <% } else { %>
        <div class="w-48 h-48 bg-gray-100 rounded-lg flex items-center justify-center">
          <i class="fas fa-user text-6xl text-gray-300"></i>
        </div>
        <% } %>
      </div>
      
    </div>
  </div>
  
  <!-- Contact Info -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4">
      <h3 class="text-xl font-bold text-white">Contact Information</h3>
    </div>
    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="text-sm font-medium text-gray-500">Email</label>
        <p class="text-gray-900"><%= admission.email || 'N/A' %></p>
      </div>
      <div>
        <label class="text-sm font-medium text-gray-500">Phone</label>
        <p class="text-gray-900"><%= admission.phone %></p>
      </div>
      <div class="md:col-span-2">
        <label class="text-sm font-medium text-gray-500">Address</label>
        <p class="text-gray-900"><%= admission.address %></p>
      </div>
    </div>
  </div>
  
  <!-- Parent Info -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-purple-600 to-purple-700 px-6 py-4">
      <h3 class="text-xl font-bold text-white">Parent Information</h3>
    </div>
    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label class="text-sm font-medium text-gray-500">Father's Name</label>
        <p class="text-gray-900"><%= admission.fatherName %></p>
      </div>
      <div>
        <label class="text-sm font-medium text-gray-500">Mother's Name</label>
        <p class="text-gray-900"><%= admission.motherName %></p>
      </div>
    </div>
  </div>
  
  <!-- Educational Background -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-yellow-600 to-yellow-700 px-6 py-4">
      <h3 class="text-xl font-bold text-white">Educational Background</h3>
    </div>
    <div class="p-6">
      <div>
        <label class="text-sm font-medium text-gray-500">Previous School</label>
        <p class="text-gray-900"><%= admission.previousSchool || 'N/A' %></p>
      </div>
    </div>
  </div>
  
  <!-- Status & Admin Notes -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-red-600 to-red-700 px-6 py-4">
      <h3 class="text-xl font-bold text-white">Status & Admin Notes</h3>
    </div>
    <div class="p-6">
      <form action="/admin/admissions/<%= admission.id %>/status" method="POST" class="space-y-4">
        <div>
          <label class="text-sm font-medium text-gray-700">Status</label>
          <select name="status" class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
            <option value="PENDING" <%= admission.status === 'PENDING' ? 'selected' : '' %>>Pending</option>
            <option value="APPROVED" <%= admission.status === 'APPROVED' ? 'selected' : '' %>>Approved</option>
            <option value="REJECTED" <%= admission.status === 'REJECTED' ? 'selected' : '' %>>Rejected</option>
          </select>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-700">Admin Notes</label>
          <textarea name="admin_notes" rows="4" class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"><%= admission.adminNotes || '' %></textarea>
        </div>
        <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          <i class="fas fa-save mr-2"></i>Update Status
        </button>
      </form>
    </div>
  </div>
  
  <!-- Actions -->
  <div class="flex space-x-4">
    <a href="/admin/admissions/<%= admission.id %>/edit" class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
      <i class="fas fa-edit mr-2"></i>Edit Admission
    </a>
    <form action="/admin/admissions/<%= admission.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this admission?')" class="inline">
      <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
        <i class="fas fa-trash mr-2"></i>Delete Admission
      </button>
    </form>
  </div>
  
</div>
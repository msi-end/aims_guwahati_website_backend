<div class="max-w-3xl mx-auto p-6">
    <nav class="mb-4">
        <a href="/admin/placements" class="text-sm text-blue-600 hover:underline">
            <i class="fas fa-arrow-left mr-1"></i> Back to List
        </a>
    </nav>

    <div class="bg-white rounded-2xl shadow-sm border p-8">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">
            <%= record ? 'Edit Placement Record' : 'Add New Placement' %>
        </h1>

        <form action="<%= record ? '/admin/placements/edit/' + record.id : '/admin/placements/create' %>" 
              method="POST" 
              enctype="multipart/form-data" 
              class="space-y-6">
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase mb-2">Student Full Name</label>
                    <input type="text" name="studentName" value="<%= record ? record.studentName : '' %>" 
                           class="w-full p-3 bg-gray-50 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>

                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase mb-2">Company Name</label>
                    <input type="text" name="companyName" value="<%= record ? record.companyName : '' %>" 
                           class="w-full p-3 bg-gray-50 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>

                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase mb-2">Designation / Role</label>
                    <input type="text" name="designation" value="<%= record ? record.designation : '' %>" placeholder="e.g. Software Engineer"
                           class="w-full p-3 bg-gray-50 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>

                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase mb-2">Salary Package (Optional)</label>
                    <input type="text" name="package" value="<%= record ? record.package : '' %>" placeholder="e.g. 6.5 LPA"
                           class="w-full p-3 bg-gray-50 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>

                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase mb-2">Batch/Year</label>
                    <input type="text" name="batchYear" value="<%= record ? record.batchYear : '' %>" placeholder="e.g. 2024-25"
                           class="w-full p-3 bg-gray-50 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>

                <div>
                    <label class="block text-xs font-black text-gray-400 uppercase mb-2">Student Photo</label>
                    <input type="file" name="image" <%= record ? '' : '' %> accept="image/*"
                           class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
                    <% if(record && record.photoUrl) { %>
                        <p class="mt-2 text-[10px] text-gray-400 italic">Leave empty to keep existing photo</p>
                    <% } %>
                </div>
            </div>

            <div class="flex items-center space-x-3 bg-gray-50 p-4 rounded-xl border border-dashed">
                <input type="checkbox" name="isActive" id="isActive" <%= record && record.isActive ? 'checked' : (record ? '' : 'checked') %>
                       class="w-4 h-4 text-blue-600 rounded border-gray-300">
                <label for="isActive" class="text-sm font-bold text-gray-700 uppercase">Show on website (Active)</label>
            </div>

            <div class="pt-4 border-t flex justify-end space-x-4">
                <a href="/admin/placements" class="px-6 py-2 rounded-lg text-gray-600 font-bold hover:bg-gray-100 transition">Cancel</a>
                <button type="submit" class="px-8 py-2 bg-blue-600 text-white rounded-lg font-bold hover:bg-blue-700 transition shadow-lg shadow-blue-100">
                    <%= record ? 'Update Record' : 'Create Record' %>
                </button>
            </div>
        </form>
    </div>
</div>